<% body_class "login" %>
<div id="actionBox">
  <div class="boxHeader">
    <ul>
      <li class="active"><%= link_to "Login", new_session_path(resource_name) %><br /></li>
      <li class="active"><%= link_to "Cadastrar", new_registration_path(resource_name) %></li>
    </ul>
  </div>
  <div class="boxBody">
    <img src="<%= asset_path( 'logo.svg' ) %>" class="logo" />
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <p>E-mail usado no cadastro</p>
 <div class="field">
    <%= f.label :email do%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% end %>
  </div>
  <button>Recuperar senha</button>
    <% end %>
  </div>
</div>