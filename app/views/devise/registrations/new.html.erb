<% body_class "login" %>
<div id="actionBox">
  <div class="boxHeader">
    <ul>
      <li><%= link_to "Log in", new_session_path(resource_name) %><br /></li>
      <li class="active"><%= link_to "Sign up", new_registration_path(resource_name) %></li>
    </ul>
  </div>
  <div class="boxBody">
    <img src="<%= asset_path( 'logo.svg' ) %>" class="logo" />
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name do%>
      Nome:
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email do%>
      E-mail:
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :phone do%>
      Telefone:
      <%= f.phone_field :phone, autofocus: true, autocomplete: "phone" %>
    <% end %>
  </div>

    <%= f.label :password, :class => 'half' do%>
      Senha:
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    <% end %>
    <%= f.label :password_confirmation, :class => 'half' do%>
     Repita a senha:
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% end %>
  <button>Cadastrar</button>
    <% end %>
  </div>
</div>